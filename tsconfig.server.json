{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["esnext"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "paths": { "@/*": ["./src/*"] }
  },
  "include": ["server.ts", "src/lib/**/*.ts"],
  "exclude": ["node_modules"]
}
